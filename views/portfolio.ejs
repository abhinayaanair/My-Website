                    <div class="inner-grid-div">
                        <img src="/images/recipe.png" alt="Recipe Generator">
                        <div class="overlay">
                            <p>AI-based recipe generator</p>
                        </div>
                    </div>
                </div>
                <!-- Grid Item 2 -->
                <div class="grid-item" data-link="https://github.com/abhinayaanair/SPAM_CLASSIFIER">
                    <div class="inner-grid-div">
                        <img src="/images/spam.png" alt="Spam Classifier">
                        <div class="overlay">
                            <p>Spam classifier</p>
                        </div>
                    </div>
                </div>
                <!-- Grid Item 3 -->
                <div class="grid-item" data-link="https://github.com/abhinayaanair/Myntra_review_scrapper_ml">
                    <div class="inner-grid-div">
                        <img src="/images/myntra.png" alt="Myntra Review Scraper">
                        <div class="overlay">
                            <p>Myntra review scraper</p>
                        </div>
                    </div>
                </div>
                <!-- Grid Item 4 -->
                <div class="grid-item" data-link="https://abhinayaanair.github.io/Spotify-clone/">
                    <div class="inner-grid-div">
                        <img src="https://storage.googleapis.com/pr-newsroom-wp/1/2023/05/2024-spotify-brand-assets-media-kit.jpg" alt="Spotify Clone">
                        <div class="overlay">
                            <p>Spotify clone</p>
                        </div>
                    </div>
                </div>
                <!-- Grid Item 5 -->
                <div class="grid-item" data-link="https://github.com/abhinayaanair/Text-To-Image-Using-LLM">
                    <div class="inner-grid-div">
                        <img src="/images/text.png" alt="Text to Image">
                        <div class="overlay">
                            <p>Text to image generator</p>
                        </div>
                    </div>
                </div>
                <!-- Grid Item 6 -->
                <div class="grid-item" data-link="https://tourco.vercel.app/listings">
                    <div class="inner-grid-div">
                        <img src="/images/TOURCO (1).png" alt="Tourco">
                        <div class="overlay">
                            <p>Tourco- Book your stay</p>
