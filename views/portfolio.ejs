                </nav>
                <div class="ham-div" onclick="showSidebar()"><i class="fa-solid fa-bars hamburger-menu"></i></div>
            </div>
        </div>
    </div>

    <!-- JavaScript for Sidebar and Click Navigation -->
    <script>
        // Sidebar toggle functions
        const sidebar = document.querySelector(".sidebar");
        const image = document.querySelector(".img"); // Note: No .img in this HTML, may be in navbar.css

        function showSidebar() {
            sidebar.style.display = "flex";
            if (image) image.style.visibility = "hidden";
        }

        function hideSidebar() {
            sidebar.style.display = "none";
            if (image) image.style.visibility = "visible";
        }

        // Click navigation for all devices
        const gridItems = document.querySelectorAll(".grid-item");
        for (let i = 0; i < gridItems.length; i++) {
            gridItems[i].addEventListener('click', () => {
                window.location.href = gridItems[i].dataset.link;
            });
        }
    </script>
</body>
</html>
